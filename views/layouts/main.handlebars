<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Music With Me!</title>
    <link rel="stylesheet" href="/public/main_styles.css">
</head>
<header>
    <h1 class="header">
        {{#if user}}
            <section class="headerSideControl">
                <button class = "openBut" onclick = "openNav()">&#8801;</button>
            </section>
            {{else}}
                <a class='littleLink loginLink homeLink' href="/">Home</a>
        {{/if}}
        <a href="/">Music With Me</a>
        {{#if user}}
            <a class='littleLink loginLink' href = "/store">Coins: {{user.coins}}</a>
            {{else}}
                <a class='littleLink loginLink' href = "/account">Log in/Create Account</a>
        {{/if}}
    </h1>
</header>
<body>
    <div id = "sideNav" class = "sidenav">
        <a href = "javascript:void(0)" class = "closebtn" onclick = "closeNav()"> &times;</a>
        <a class="navLink" href="/">Home</a>
        <a class="navLink" href="/lessons">Lessons</a>
        <a class="navLink" href="/account/view">View Account</a>
        <a class="navLink" href = "/store">Store</a>
        <a class="navLink" href = "/leaderboard">Leaderboard</a>
        <a class="logoutLink navLink" href="/account/logout">Logout</a>
    </div>
    <div id = "main">
        <main>
            {{{body}}}
        </main>
    </div>
</body>
<script src='/public/scripts/mainScript.js'></script>
</html>