<section class="reportCard">
	<p class="reportGrade animateStamp">{{{grade}}}</p>
	<h2>Report Card</h2>
	<h3>you {{result}}</h3>
	<table class="reportDetailsTable ">
		<tbody>
			<tr>
				<td>
					<span>Score</span>
					{{#if newHi}}
						<p class="highScoreTxt">New High Score!</p>
					{{/if}}
				</td>
				<td>{{score}}</td>
			</tr>
			<tr>
				<td>Accuracy</td>
				<td>{{accuracy}}%</td>
			</tr>
			<tr>
				<td>Highest Streak</td>
				<td>{{streak}}</td>
			</tr>
			<tr>
				<td>Coins Earned</td>
				<td>{{coins}}</td>
			</tr>
			{{#if fail}}
				<tr>
					<td>Passing Score</td>
					<td>{{minScore}}</td>
				</tr>
				<tr>
					<td>Passing Accuracy</td>
					<td>80%</td>
				</tr>
			{{/if}}

		</tbody>
	</table>
	<section>

	<section class="cardNav">
		{{#if fail}}
		<button id='failBtn' class='actionButton' onClick="nextLesson(true)">Try Again</button>
		{{else}}
			<button class='actionButton' onClick="nextLesson(true)">Play Again</button>
			{{#if finalRound}}
			{{else}}
			<button id='passBtn' class='actionButton' onClick="nextLesson()">Next Level</button>
			{{/if}}
		{{/if}}
	</section>
</section>